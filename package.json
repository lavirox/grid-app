{
	"name": "hover-tiles-app",
	"version": "1.0.0",
	"description": "Hover-revealing tiles whiteboard app",
	"main": "electron.cjs",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"electron": "electron .",
		"electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && NODE_ENV=development electron .\"",
		"electron:build": "npm run build && electron-builder"
	},
	"keywords": [
		"electron",
		"tldraw",
		"whiteboard",
		"tiles"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"concurrently": "^8.2.0",
		"electron": "^28.0.0",
		"electron-builder": "^24.9.0",
		"svelte": "^4.2.0",
		"vite": "^5.0.0",
		"wait-on": "^7.2.0"
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tldraw": "^4.1.1"
	},
	"build": {
		"appId": "com.hovertiles.app",
		"productName": "Hover Tiles",
		"files": [
			"dist/**/*",
			"electron.cjs"
		],
		"directories": {
			"output": "release"
		},
		"mac": {
			"category": "public.app-category.productivity"
		}
	}
}
